<h1>Those are all the current articles</h1>


<% @articles.each do |article| %>

  <h3>Title: <%= article.title %> </h3>

  <p> <%= article.content %> </p>

  <%= link_to 'more information', article_path(article) %>
  <%= link_to 'edit the article', edit_article_path(article) %>
  <%= link_to 'delete the article', article_path(article), method: :delete, data: { confirm: "Are you sure ?"} %>

  </br>
  <%= article.updated_at %>

<% end %>

</br>
<%= link_to 'create a new article', new_article_path %>

